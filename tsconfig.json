{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/types",
    "paths": {
      "@/*": ["./src/*"],
    },
  },
  "include": ["./src/**/*"]
}
