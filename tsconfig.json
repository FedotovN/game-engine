{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/types",
    "types": ["sat"],
    "paths": {
      "@/*": ["./src/*"],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": ["./src/**/*"]
}
